ALTER PROCEDURE [dbo].[PR_MAQUINA_ATUALIZA] 
	@ID INT,
	@CODIGO VARCHAR(20),
	@NOME VARCHAR(50),	
	@PATH VARCHAR(50),
	@REDE VARCHAR(MAX),
	@ATUALIZACAO DATETIME2(7),
	@PARAMETROS VARCHAR(MAX),
	@ESTADO  VARCHAR(MAX)
AS
BEGIN

	UPDATE MAQUINA
		SET
			codigo = @CODIGO, 
			nome = @NOME,
			path = @PATH,
			rede = @REDE,
			atualizacao = @ATUALIZACAO,
			parametros = @PARAMETROS,
			estado = @ESTADO
	WHERE 
		id = @ID

	SELECT * FROM MAQUINA WHERE id = @ID

END



